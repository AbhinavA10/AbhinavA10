{% extends "layout_project.njk" %}
{% block content %}
    {% from "_components.njk" import iframeVideo %}
    <div class = "text-center">
        <h2 class="section-heading text-uppercase">Wat-Health</h2>
        <p class="item-intro text-muted">Web App for Mental Health</p>
    </div>
    <!-- https://www.w3schools.com/bootstrap/bootstrap_carousel.asp
                    https://getbootstrap.com/docs/4.0/components/carousel/ -->
    <div id="carouselWathealth" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carouselWathealth" data-slide-to="0" class="active"></li>
            <li data-target="#carouselWathealth" data-slide-to="1"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="../img/portfolio/sumobot/IMG_20150625_215507_SumoSide.jpg" alt="Chicago"
                        class="d-block w-100 portfolioImgWide">
                <div class="carousel-caption">
                    <p>Side view</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../img/portfolio/sumobot/IMG_20150625_215523_sumoFront.jpg" alt="Chicago"
                        class="d-block w-100 portfolioImgWide">
                <div class="carousel-caption">
                    <p>Front view</p>
                </div>
            </div>

        </div>
        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#carouselWathealth" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselWathealth" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="portfolio-description">

        <p>
                    The presentation we created for this project can be read <a
                      href="https://github.com/AbhinavA10/WAT-Health/blob/master/WATHealth.pdf" target="_blank">here</a>
        </p>
    </div>
    <div class="text-center">
        <ul class="list-inline">
            <li>
                <a href="https://github.com/AbhinavA10/WAT-Health" target="_blank">Github Repo</a>
            </li>
            <li>Timeframe: 1B</li>
            <li>Relevant Technologies: Vue.js, Firebase</li>
        </ul>
        <a  href="../projects.html">
            <button class="btn btn-primary" type="button">
                <i class="fa fa-times"></i>
                  Close Project
            </button>
        </a>
    </div>
{% endblock %}