<!-- maintenance.njk -->
{% extends "layout.njk" %}
{% block content %}
<!-- Header -->
  <header class="masthead">
    <div class="container">
      <div class="intro-text landing-smaller">
        <!-- reduced size of this landing portion -->
        <div class="intro-lead-in"></div>
        <div class="intro-heading text-uppercase">
          <p>Hardware</p>
        </div>
      </div>
  </header>
  <!-- Portfolio Grid -->
  <section class="bg-light" id="portfolio">

    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Projects</h2>
          <h3 class="section-subheading-normal text-muted">Below is a collection of the projects I have
            created, or co-created over the past years, in reverse-chronological order. Click on the individual project
            to learn more about it.</h3>
        </div>
      </div>
      <!-- TODO: IMPLEMENT THIS FILTER LATER
          <div id="myBtnContainer">
            <button class="btn active" onclick="filterSelection('all')"> Show all</button>
            <button class="btn" onclick="filterSelection('cars')"> Cars</button>
            <button class="btn" onclick="filterSelection('animals')"> Animals</button>
            <button class="btn" onclick="filterSelection('fruits')"> Fruits</button>
            <button class="btn" onclick="filterSelection('colors')"> Colors</button>
          </div>
          -->

      {% macro projectCard(title, description, imgSrc, link, filterClasses='') %}
        <div class="col-md-4 col-sm-6 portfolio-item">
          <a class="portfolio-link" data-toggle="modal" href="{{ link }}">
            <div class="portfolio-hover">
              <div class="portfolio-hover-content">
                <i class="fa fa-plus fa-3x"></i>
              </div>
            </div>
            <img class="img-fluid" src="{{ imgSrc }}" alt="">
          </a>
          <div class="portfolio-caption">
            <h4>{{ title }}</h4>
            <p class="text-muted">{{ description }}</p>
          </div>
        </div>
      {% endmacro %}

      <div class="row">
        {{ projectCard("PS2 Controller Interface","Grade 12 Final Project - PCB","img/portfolio/ps2/PS2_thumb.png","#portfolioModalPS2Interface", 'hardware C') }} 
        {{ projectCard("Music-syncing Light-up Gramophone","Grade 12 project, with Low-pass filter","img/portfolio/gramophone/Gramophone_thumb.png","#portfolioModalGramophone, 'hardware C'") }} 
        {{ projectCard("Flex-sensing Robotic Hand","Grade 11 3D printed Project","img/portfolio/hand/hand-thumbnail.jpg","#portfolioModalRoboticHand", 'hardware C') }} 
        {{ projectCard("CHRP3 and UBMP RC Interface","Grade 10 IR Remote Control Final Project","img/portfolio/CHRP3-RC/IMG_20181223_132926_RCThumb.jpg","#portfolioModalUBMPRC", 'hardware C') }} 
        {{ projectCard("Message Wand","Grade 10 Robotics Club","img/portfolio/wand/WandThumb.jpg","#portfolioModalMessageWand", 'hardware C') }} 
        {{ projectCard("Sumo Fighting Robot","Grade 9 Robotics Club","img/portfolio/sumobot/sumoThumb.jpg","#portfolioModalSumoFighting", 'hardware C') }} 
      </div>
    </div>
  </section>
  <!-- Portfolio Modals (the popup projects)-->
  {% include "_ps2-interface-pcb.njk" %}
  {% include "_gramophone.njk" %}
  {% include "_robotic-hand.njk" %}
  {% include "_chrp-ubmp-rc.njk" %}
  {% include "_message-wand.njk" %}
  {% include "_sumo-robot.njk" %}
{% endblock %}